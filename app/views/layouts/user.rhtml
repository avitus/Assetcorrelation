						</div>
						
					<h3 class="toggler menusection">Correlation Over Time</h3>
						<div class="element menusection">
							<ul>
								<li><%= link_to 'Enter 2 Assets',		   :controller => 'user', :action => 'enter_time_corr'%></li>
							</ul>
						</div>		
						
		  <div id="left-footer">
			<ul>
			    <li><%= link_to 'Contact',				           :controller => 'user',  :action => 'contact'%></li>	
			    <li>Andy Vitus</li>								
			</ul>		  	
		  </div> <!-- End of Left Footer -->										
						  
